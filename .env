# Model Configuration
HF_TOKEN=your-hugging-face-token
HF_HOME=./cache/huggingface
TRANSFORMERS_CACHE=./cache/transformers

# Model Selection
BASE_MODEL=microsoft/phi-2
MODEL_OUTPUT_DIR=./models/retail-assistant-model

# Training Configuration
BATCH_SIZE=4
LEARNING_RATE=2e-4
NUM_EPOCHS=3
MAX_LENGTH=512

# Inference Configuration
TEMPERATURE=0.7
TOP_P=0.9
MAX_NEW_TOKENS=256

# API Configuration
API_HOST=0.0.0.0
API_PORT=7860

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retail_assistant
DB_USER=admin
DB_PASSWORD=your_password_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# GPU Configuration
CUDA_VISIBLE_DEVICES=0